<!DOCTYPE html>
<html>
  <head>
    <title>Agro</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
      <div class="container">
    <% if current_user.role == 'farmer' %>
      <%= render 'farmer' %>
    <% elsif current_user.role == 'investor' %>
      <%= render 'investor' %>
    <% end %>
    </div>

<!-- Progress Bar -->
<div class="container3">
  <ul class="progressbar">
    <li class=<%= @a %>>
    <i class="fa fa-leaf fa-1x" aria-hidden="true" style="color: green"></i>
    </li>
    <li class=<%= @b %>>
    <i class="fa fa-leaf fa-2x" aria-hidden="true" style="color: green"></i>
    </li>
    <li class=<%= @c %>>
    <i class="fa fa-leaf fa-3x" aria-hidden="true" style="color: green"></i>
    </li>
  </ul>
</div>
  </body>
</html>
